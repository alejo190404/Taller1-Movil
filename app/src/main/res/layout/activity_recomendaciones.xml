<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    >

    <TextView
        android:id="@+id/nombreDestinoRecomendacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="NA"
        android:layout_above="@id/nombrePaisRecomendacion"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/nombrePaisRecomendacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text=""
        android:layout_above="@+id/nombreCategoriaRecomendacion"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:id="@+id/nombreCategoriaRecomendacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:text=""
        android:textSize="16sp"
        />
    <TextView
        android:id="@+id/nombrePlanRecomendacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text=""
        android:layout_below="@id/nombreCategoriaRecomendacion"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:id="@+id/nombrePrecioRecomendacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text=""
        android:layout_below="@+id/nombrePlanRecomendacion"
        android:layout_centerHorizontal="true"
        />



</RelativeLayout>